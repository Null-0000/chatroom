<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.controller.MainViewController"
            prefHeight="400.0" prefWidth="400.0">
<children>
    <VBox>
        <GridPane>
            <Label fx:id="id" GridPane.columnIndex="1" GridPane.rowIndex="0"></Label>
            <Label fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="1"></Label>
            <Label fx:id="sig" GridPane.columnIndex="1" GridPane.rowIndex="2"></Label>
        </GridPane>
        <ListView fx:id="friList"></ListView>
        <HBox>
            <Button fx:id="addFriend" onAction="#addFriend"></Button>
        </HBox>
    </VBox>

</children>
</AnchorPane>
