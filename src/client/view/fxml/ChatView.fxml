<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>

<?import javafx.scene.web.WebView?>
<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="600" prefWidth="1000">
    <HBox  GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER">
    <Label fx:id="chatToLabel"></Label>
    </HBox>
    <WebView fx:id="dialogView" GridPane.columnIndex="0" GridPane.rowIndex="1"></WebView>
    <TextArea fx:id="typeArea" GridPane.columnIndex="0" GridPane.rowIndex="2"></TextArea>
    <HBox alignment="BOTTOM_RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <Button fx:id="sendButton" onAction="#sendMessage">Send</Button>
    </HBox>
    <WebView fx:id="show" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="4"></WebView>
    <stylesheets>
        <URL value="@css/ChatView.css"></URL>
    </stylesheets>
</GridPane>
